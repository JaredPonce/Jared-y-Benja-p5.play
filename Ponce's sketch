//hardest game uwu

let obst, obst2, coin, area, img, area2, x ,y, o, VDO, block1;

let imageBackGround, IDP;

function preload(){
  imageBackGround = loadImage('https://play-lh.googleusercontent.com/OnDwQAzziT-qesY5yw73fNn2G10fPicQo6sBV94XTFggbiMx4179OSwIR6NOW0FWBOc');
  
  IDP = loadImage('https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/763e4a4f-0453-48cd-96ef-d2aba6b7d98d/d9onyft-5fd9c060-a307-479f-a802-1c55899faf0b.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..YG5Te7VYjaXpu4n8MEXZZtoqLzku74rwGcQ1RyBdSGo')
  
}

function setup() { 
  
     
      
  
	createCanvas(650, 650);
    
    //area2
    area2 = new Sprite(560,490,100,80);
    area2.color = '#8AFF88'
    area2.collider = 'static'
    
    
    //area
	area = new Sprite(60,250,80,200);
    area.color = '#8AFF88';
  
    //piso
    floor = new Sprite(307, 450, 406, 1)
    floor.collider = 'static'
    strokeWeight(4)
    floor.color = '#AF9FF6'
  
    //la pared de la izquierda
	paredIzq = new Sprite(100, 400, 1, 100);
    paredIzq.collider = 'static'
    paredIzq.color = '#AF9FF6'
  
    //pared de la derecha
	paredDer = new Sprite(610, 325, 1, 245);
    paredDer.collider = 'static'
    paredDer.color = '#AF9FF6'
  
    //pared de arriba
	paredArr = new Sprite(355, 200, 510, 1);
    paredArr.collider = 'static'
    paredArr.color = '#AF9FF6'
  
    //obstaculo 1
    obst = new Sprite(280, 300, 300, 200);
    obst.diameter = 20
    obst.color = '#2243E9'
    obst.velocity.y = 4
  
    //obstaculo 2
    obst2 = new Sprite(400, 375, 200, 8);
    obst2.diameter = 20
    obst2.color = '#2243E9'
    obst2.velocity.y = 4;
    
    
  
    //moneda
    
    coin = new Sprite()
    coin.collider = 'static'
    coin.diameter = 20
    coin.color = '#DDDD1B'
    coin.x = 340;
    coin.y = 340;
  
    //jugador
    player = new Sprite(60, 250, 20, 20);
    player.color = 'red';
    player.overlaps(area);
    player.overlaps(area2);
    player.overlaps(obst);
    player.overlaps(obst2);
}

function draw() {
	background('#AF9FF6');

 if (obst.colliding(floor)) {
		obst.velocity.y = -4;
	}

  if (obst.colliding(paredArr)) {
		obst.velocity.y = 4;
	}
  
   if (obst2.colliding(floor)) {
		obst2.velocity.y = -4;
	}

  if (obst2.colliding(paredArr)) {
		obst2.velocity.y = 4;
	}
  
  if(player.overlaps(obst)) {
    player.x = 60;
    player.y = 250;
    
    o = -1;
    
    coin.x = 340;
    coin.y = 340;
    
  
  }
  
  if(player.overlaps(obst2)) {
    player.x = 60;
    player.y = 250;
    
    o = -1;
    
    coin.x = 340;
    coin.y = 340;
  }
  if(player.overlaps(coin)){
    coin.x = 700;
    coin.y = 700;
  }  
  if(player.overlaps(area2) && coin.x === 700){
    o = + 1;
  }
  
  if(o == 1){
    textSize(32);
    text('Level Complete',300,300)
  }
  
  if(player.overlaps(area2) && coin.x === 700){
    
  }
  
  image(imageBackGround,100,200);
  
  //image(IDP, 200,200,400,300);
 
  player.moveTowards(mouse.x, mouse.y);
}
 window.addEventListener('devicemotion', function(e) {
  x = parseInt(e.accelerationIncludingGravity.x);
  y = parseInt(e.accelerationIncludingGravity.y);
  z = parseInt(e.accelerationIncludingGravity.z);
});

